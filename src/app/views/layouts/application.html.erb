<!DOCTYPE html>
<html>
  <head>
    <title>ImpulseAuction</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <%= link_to "ImpulseAuction", root_path, { :class => "navbar-brand" } %>
            <div class="buttons-nav">
                <%= button_to "Create Listing", new_listing_path, :method=>"get", :class => "btn btn-primary" %>
                <% if User.find_by_id(current_user.id).admin %>
                    <%= button_to "Admin", admin_dashboard_path, :method=>"get", :class => "btn btn-danger" %>
                <% end %>
            </div>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <%= link_to "Home", root_path, { :class => "nav-link" } %> 
                    </li>
                    <li class="nav-item">
                        <%= link_to "Orders", orders_path, { :class => "nav-link" } %> 
                    </li>
                    <% if user_signed_in? %>
                        <li class="nav-item">
                            <%= link_to "Account", user_path(current_user.id), { :class => "nav-link" } %> 
                        </li>
                    <% end %>
                    <li class="nav-item">
                    <% if user_signed_in? %>
                        <%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => "nav-link" %>
                    <% else %>
                         <%= link_to "Login", new_user_session_path, :method => :get, :class => "nav-link" %>
                    <% end %>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
